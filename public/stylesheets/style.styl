transition()
	-webkit-transition: arguments
	-moz-transition: arguments
	-o-transition: arguments
	transition: arguments

transform()
	-webkit-transform: arguments
	-moz-transform: arguments
	-o-transform: arguments
	transform: arguments

animation()
	-webkit-animation: arguments
	-moz-animation: arguments
	-o-animation: arguments
	animation: arguments

body
	font-family: Arial
	background: url("../images/bgnoise.jpg")
	margin: 0
	padding: 0

html,
body,
.main-content,
.item-list,
.col
	position: relative
	min-height: 100%

.motto
	font-family: Georgia
	font-style: italic
	color: #686868
	margin-top: 0

.main-menu
	position: fixed
	height: 60px
	background: #333
	top: 0
	left: 0
	right: 0
	margin: 0
	padding: 0
	list-style: none
	box-shadow: 0px 3px 0px 0px rgba(0, 0, 0, 0.15)
	z-index: 500

	li
		display: inline

	a
		display: inline-block
		height: 60px
		line-height: 60px
		float: left
		padding: 0 1em
		color: white
		text-decoration: none
		font-weight: bold
		opacity: .9
		transition: all 200ms ease-in-out

		&:hover
			opacity: 1

.new-project-window,
.new-task-window
	display: none

	&.open
		display: block

.col
	width: 33%
	float: left
	height: 100%
	min-height: 100%
	padding-bottom: 200px

.hidden
	display: none !important

.item-list
	margin-top: 60px
	display: table
	width: 100%
	height: 100%
	transition: all 200ms ease-in-out

	&.filteropen
		margin-top: 120px

.task
	margin: 1em
	padding: 1em
	background: white
	box-shadow: 0px 1px 1px 1px rgba(0, 0, 0, 0.15)
	width: 50%
	min-height: 100px
	font-style: italic
	position: relative
	transition: all 300ms ease-in-out
	opacity: 1

	.task-controls
		display: none
		position: absolute
		bottom: 1.7em
		right: 0
		left: 0

	&:hover .task-controls
		display: block

	p
		margin: 0
		padding: 0
		font-size: 1.3em
		line-height: 1.5em
		font-family: Georgia
		color: #333
		margin-bottom: .8em

		a
			border-bottom: 1px solid #C8C8C8
			text-decoration: none
			color: #505050
			outline: none

			&:hover
				border-bottom: 1px solid black
				background: rgba(0, 0, 0, .05)
				color: black

	&.removed
		opacity: 0
		transform: scale(0)

.control-update,
.control-remove
	display: inline-block
	overflow: hidden
	opacity: 0.2
	margin-right: 1em
	position: absolute
	top: 0

	&:hover
		opacity: 0.8

	&:before
		content: ''
		display: block
		background: url("../images/sprite.png")
		float: left

.control-remove
	width: 12px
	height: 15px
	right: 0

	&:before
		width: 12px
		height: 15px
		background-position: -67px -44px

.control-update
	width: 19px
	height: 15px
	left: 1em

	&:before
		width: 19px
		height: 15px
		background-position: -44px -44px

.btn-add-new-task-inline
	display: block
	width: 50%
	height: 100px
	line-height: 100px
	margin: 1em
	text-align: center
	font-weight: bold
	border: 3px dashed #ccc
	padding: .8em
	text-decoration: none
	transition: all 200ms ease-in-out
	color: #ccc
	text-shadow: 0px 1px 0px #ffffff

	&:hover
		border: 3px dashed #aaa
		color: #aaa

.col-title
	font-size: 100%
	margin: 1em
	color: #888
	text-shadow: 0px 1px 0px #ffffff

.btn-add-new-task
	background-color: #FF6347
	
	&:before
		content: ''
		display: block
		height: 55px
		width: 35px
		float: left
		background: url("../images/add-new-task.png") no-repeat left

.new-task-window
	animation: myfirst 200ms ease-in-out;

.task-textarea
	width: 98%
	height: 70px
	resize: none
	font-family: Georgia
	font-size: 1.3em
	line-height: 1.5em
	font-style: italic
	border: 0
	margin-bottom: .5em
	outline: none
	

.btn-save
	background-color: #4D90FE
	background-image: -webkit-linear-gradient(top,#4D90FE,#4787ED)
	background-image: -moz-linear-gradient(top,#4D90FE,#4787ED)
	background-image: -ms-linear-gradient(top,#4D90FE,#4787ED)
	background-image: -o-linear-gradient(top,#4D90FE,#4787ED)
	background-image: linear-gradient(top,#4D90FE,#4787ED)
	border: 1px solid #3079ED
	color: white
	display: inline-block
	font-weight: bold
	font-size: 89%
	padding: .5em .8em
	margin-right: 1em
	text-decoration: none
	
	&:hover
		border-color: #0B4CB3

.btn-cancel
	font-size: 89%
	border-bottom: 1px solid #C8C8C8
	text-decoration: none
	color: #505050
	outline: none

	&:hover
		border-bottom: 1px solid black
		background: rgba(0, 0, 0, .05)
		color: black

.btn-new-project
	width: 206px
	height: 48px

.btn-new-project-wrap
	background: url("../images/btn-shadow.png") bottom
	width: 206px
	height: 67px
	float: left
	margin-right: 46px

.check-area
	width: 118px
	height: 68px
	display: inline-block
	position: relative
	float: left

.switch-btn
	width: 59px
	height: 64px
	position: absolute
	background: url("../images/switch-shadow.png") bottom
	top: 0
	left: 59px
	transition: all 300ms ease-in-out

	&.check
		left: 0px

.switch-btn-inside
	width: 59px
	height: 48px
	background-color: #4D90FE
	background-image: -webkit-linear-gradient(top,#4D90FE,#4787ED)
	background-image: -moz-linear-gradient(top,#4D90FE,#4787ED)
	background-image: -ms-linear-gradient(top,#4D90FE,#4787ED)
	background-image: -o-linear-gradient(top,#4D90FE,#4787ED)
	background-image: linear-gradient(top,#4D90FE,#4787ED)
	border: 1px solid #3079ED
	color: white
	cursor: pointer

	&:hover
		border-color: #0B4CB3

	&:before
		content: ''
		display: block
		width: 59px
		height: 48px
		background: url("../images/handle.png") no-repeat center

.switch-area
	border: 1px solid #d4d4d4
	height: 44px
	width: 118px
	margin-top: 2px

.switch-public,
.switch-private
	width: 59px
	height: 44px
	float: left

.switch-public
	background: url("../images/icon-public.png") no-repeat center

.switch-private
	background: url("../images/icon-private.png") no-repeat center

.check-info
	height: 53px
	line-height: 53px
	font-size: 60%
	color: #a9adb2
	float: left
	margin-left: 1em
	overflow: hidden

.public-info,
.private-info
	position: relative
	top: 0px
	opacity: 0
	transition: all 300ms ease-in-out

.public-info
	top: -54px
	&.active
		top: 0px
		opacity: 1

.private-info
	&.active
		top: -54px
		opacity: 1

.sign-in
	clear: both
	height: 0
	transition: all 300ms ease-in-out
	overflow: hidden
	opacity: 0

	p
		margin: 0

	&.open
		height: 50px
		opacity: 1

.part-win
	width: 1000px

.new-project-part,
.project-part
	float: left
	width: 500px
	opacity: 0
	transition: all 300ms ease-in-out

	&.open
		opacity: 1

.new-project-part

	margin-left: -500px

	&.open
		margin-left: 0


.new-project-overlay
	opacity: 0
	transition: all 300ms ease-in-out
	background-color: rgba(0, 0, 0, .9);
	background-image: -webkit-gradient(radial,center center,0,center center,460,from(rgba(55, 55, 49, .5)),to(rgba(0, 0, 0, .9)));
	background-image: -webkit-radial-gradient(circle,rgba(55, 55, 49, .5),rgba(0, 0, 0, .9));
	background-image: -moz-radial-gradient(circle,rgba(55, 55, 49, .5),rgba(0, 0, 0, .9));
	background-image: -o-radial-gradient(circle,rgba(55, 55, 49, .5),rgba(0, 0, 0, .9));
	background-repeat: no-repeat;
	background-color: transparent;
	-webkit-perspective: 300px;
	-moz-perspective: 300px;
	-ms-perspective: 300px;
	-o-perspective: 300px;
	perspective: 300px;

.new-project-overlay.open
	position: fixed
	top: 0
	bottom: 0
	right: 0
	left: 0
	z-index: 1000
	opacity: 1

.new-project-window
	font-size: 1.5em
	padding: 3em

	h2
		font-size: 3em
		margin: 1.7em 0 0
		margin-top: 0
		line-height: 1.5em
		-moz-font-feature-settings: "liga=1, kern=1"
		-ms-font-feature-settings: "liga" 1, "kern" 1
		-webkit-font-feature-settings: "liga" 1, "kern" 1
		-o-font-feature-settings: "liga" 1, "kern" 1
		font-feature-settings: "liga" 1, "kern" 1
		text-rendering: optimizeLegibility
		font-weight: bold;

	.new-project-name
		margin-bottom: 1em
		padding: .5em
		width: 400px
		margin-top: .7em
	p
		line-height: 1.5em

.new-project-window.open
	animation: myfirst 200ms ease-in-out;
	position: fixed
	width: 500px
	z-index: 1100
	background: white
	left: 50%
	margin-left: -310px
	top: 15%
	overflow: hidden

.project-name
	color: white
	position: fixed
	top: 0
	right: 0
	z-index: 500
	font-weight: bold
	font-size: 1.5em
	line-height: 60px
	margin-right: 1em

	a
		color: white


.item-list:before,
.item-list:after
	content: " "
	display: table

.item-list:after
	clear: both

.item-list
	*zoom: 1	

.filter-warning
	background: #242424
	width: 100%
	position: fixed
	top: 0
	transition: all 200ms ease-in-out
	height: 60px

	p
		color: white
		padding: 0 1em
		font-family: Georgia
		font-weight: bold
		font-style: italic

		.btn-save
			margin-left: 1em
			font-style: normal
			font-family: arial

	&.open
		top: 60px

.hide
	display: none

.sign-in-btn
	border-bottom: 1px solid #C8C8C8
	text-decoration: none
	color: #505050
	outline: none
	

	&:hover
		border-bottom: 1px solid black
		background: rgba(0, 0, 0, .05)
		color: black

.tip
	font-size: 60%
	font-style: italic
	color: #A9A9A9
	clear: both

	em 
		margin-right: .1em

@keyframes myfirst
	from 
		transform: scale(.5)
	to 
		transform: scale(1)

